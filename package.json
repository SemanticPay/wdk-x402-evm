{
  "name": "@semanticpay/wdk-wallet-evm-x402-facilitator",
  "version": "1.0.0-beta.1",
  "description": "Adapter module that converts wdk-wallet-evm into x402-compatible signers for EVM blockchains.",
  "keywords": [
    "wdk",
    "x402",
    "adapter",
    "evm",
    "ethereum",
    "facilitator"
  ],
  "author": "SemanticPay",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/SemanticPay/wdk-x402-evm.git"
  },
  "main": "index.js",
  "type": "module",
  "types": "./types",
  "scripts": {
    "build:types": "tsc",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "dependencies": {
    "@tetherto/wdk-wallet-evm": "github:HumanRupert/wdk-wallet-evm#feat/add-typedData",
    "@x402/evm": "^2.2.0",
    "ethers": "6.14.3"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "jest": "29.7.0",
    "standard": "17.1.2",
    "typescript": "5.8.3"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./index.js"
    },
    "./package": {
      "default": "./package.json"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "standard": {
    "ignore": [
      "tests/**/*.js"
    ]
  }
}
